{
	"name": "cerebras-chat",
	"publisher": "Cerebras",
	"displayName": "Cerebras Inference",
	"description": "The world's fastest AI inference",
	"icon": "logo.jpeg",
	"license": "MIT",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/cerebras/vscode-cerebras-chat"
	},
	"version": "0.1.17",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"activationEvents": [],
	"contributes": {
		"languageModelChatProviders": [
			{
				"vendor": "cerebras",
				"displayName": "Cerebras",
				"managementCommand": "cerebras-chat.manageApiKey"
			}
		],
		"commands": [
			{
				"command": "cerebras-chat.manageApiKey",
				"title": "Cerebras: Manage API Key",
				"enablement": "false"
			}
		]
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"check-types": "tsc --noEmit",
		"deploy": "vsce publish",
		"prerelease": "vsce publish --pre-release",
		"lint": "eslint src"
	},
	"dependencies": {
		"@cerebras/cerebras_cloud_sdk": "^1.0.0",
		"tiktoken": "^1.0.22"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/vscode": "^1.103.0",
		"@vscode/dts": "^0.4.1",
		"esbuild": "^0.25.8",
		"eslint": "^9.13.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}
